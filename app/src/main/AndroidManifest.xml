<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evan.autoscape.autoscape" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskChoosingActivity"
            android:screenOrientation="portrait"
            android:label="AutoScape Task Selection">
        </activity>
        <activity
            android:name=".CombatTaskSelection"
            android:screenOrientation="portrait"
            android:label="AutoScape Combat Task Selection">
        </activity>
        <activity
            android:name=".PlayerStatsActivity"
            android:screenOrientation="portrait"
            android:label="Player Stat Screen">
        </activity>
    </application>

</manifest>
